<resources>

    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/grey_dark</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="android:statusBarColor">@color/grey_dark</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">?attr/colorSecondary</item>
        <item name="colorOnPrimary">?attr/colorSecondary</item>
        <item name="colorControlNormal">?attr/colorSecondary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="ThemeGreenYun" parent="AppTheme">
        <item name="colorPrimary">@color/greenYun</item>
        <item name="colorSecondary">@color/greenYun</item>
        <item name="colorPrimaryVariant">@color/greenYunLight</item>
    </style>

    <style name="ThemePurpleZeroGo" parent="AppTheme">
        <item name="colorPrimary">@color/purpleZeroGo</item>
        <item name="colorSecondary">@color/purpleZeroGo</item>
        <item name="colorPrimaryVariant">@color/purpleZeroGo</item>
    </style>

    <style name="ThemeBlue" parent="AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blueLight</item>
    </style>

    <style name="ThemeRed" parent="AppTheme">
        <item name="colorPrimary">@color/red</item>
        <item name="colorSecondary">@color/red</item>
        <item name="colorPrimaryVariant">@color/redLight</item>
    </style>

    <style name="ThemePurple" parent="AppTheme">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purpleLight</item>
    </style>

    <style name="ThemeOrange" parent="AppTheme">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orangeLight</item>
    </style>

    <style name="ThemePink" parent="AppTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorSecondary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pinkLight</item>
    </style>

    <style name="ThemeIndigo" parent="AppTheme">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorSecondary">@color/indigo</item>
        <item name="colorPrimaryVariant">@color/indigoLight</item>
    </style>

    <style name="ThemeGreen" parent="AppTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorPrimaryVariant">@color/greenLight</item>
    </style>

    <style name="ThemeTeal" parent="AppTheme">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorSecondary">@color/teal</item>
        <item name="colorPrimaryVariant">@color/tealLight</item>
    </style>

    <style name="ThemeBlack" parent="AppTheme">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorPrimaryVariant">@color/blackLight</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
    </style>
</resources>
